
{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "strict": false,
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  }
}
